@page
@model FociWebAppUj.Pages.MeccsekListazasaModel

@{
    ViewData["Title"] = "MeccsekListazasa";
}

<h1>MeccsekListazasa</h1>

<p>
    <a asp-page="Create">Új csapat hozzáadása</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Meccs[0].Fordulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meccs[0].HazaiVeg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meccs[0].VendegVeg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meccs[0].HazaiFelido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meccs[0].VendegFelido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meccs[0].HazaiCsapat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meccs[0].VendegCsapat)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Meccs) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fordulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HazaiVeg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VendegVeg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HazaiFelido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VendegFelido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HazaiCsapat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VendegCsapat)
            </td>
            <td>
                <a asp-page="./MeccsekSzerkesztése" asp-route-id="@item.Id">Szerkesztés</a> |
                <a asp-page="./MeccsekAdatai" asp-route-id="@item.Id">Adatok</a> |
                <a asp-page="./MeccsekTorlese" asp-route-id="@item.Id">Törlés</a>
            </td>
        </tr>
}
    </tbody>
</table>
